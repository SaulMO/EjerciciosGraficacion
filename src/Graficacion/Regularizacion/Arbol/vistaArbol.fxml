<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Graficacion.Regularizacion.Arbol.ControllerVistaArbol"
      spacing="10" alignment="CENTER">
    <Label text="Arbol Binario"/>
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="textDato" promptText="Dato"/>
        <Button onAction="#meterDato" text="Ingresar Nodo"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="textBuscar" promptText="Dato"/>
        <Button onAction="#buscarNodo" text="Buscar Nodo"/>
    </HBox>
    <Canvas fx:id="lienzo" height="600" width="1300"/>
</VBox>